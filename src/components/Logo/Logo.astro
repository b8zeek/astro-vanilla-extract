---
import {
    logo,
    infoComponentLogoStyles,
    headerComponentLogoStyles
} from './Logo.css'

interface Props {
    component: 'info' | 'header'
}

const { component } = Astro.props
---

<h1
    class:list=`${logo} ${component === 'info' && infoComponentLogoStyles} ${component === 'header' && headerComponentLogoStyles}`
>
    React Serbia
</h1>
