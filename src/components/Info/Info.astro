---
import { info, infoContent } from './Info.css'

import PersonCard from '../PersonCard/PersonCard.astro'
import React from '../Icons/React.astro'
import Galaxy from './Galaxy.astro'
import Footer from '../Footer/Footer.astro'
---

<div class={info}>
    <Galaxy />
    <React />
    <div class={infoContent}>
        <h1>React Serbia</h1>
        <PersonCard />
    </div>
    <Footer />
</div>

<style>
    h1 {
        display: inline-block;
        position: relative;
        text-align: center;
        letter-spacing: -0.2rem;
        background-image: linear-gradient(
            71.18deg,
            rgb(0, 34, 255) -27.32%,
            rgb(0, 34, 255) -16.39%,
            rgb(81, 121, 254) -7.38%,
            rgb(165, 237, 182) 30.59%,
            rgb(250, 232, 90) 46.06%,
            rgb(253, 172, 62) 62.61%,
            rgb(255, 92, 0) 75.82%
        );
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 4rem;
    }
</style>
