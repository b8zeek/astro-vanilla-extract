---
import Logo from '../Logo/Logo.astro'

import { anchor } from './Header.css'
---

<header>
    <Logo component='header' />
    <nav>
        <a class={anchor} href='/'>Home</a>
        <a class={anchor} href='/post'>Posts</a>
    </nav>
</header>

<style>
    header {
        display: none;
        justify-content: space-between;
        align-items: center;
    }

    nav {
        display: flex;
        gap: 1rem;
    }

    @media only screen and (min-width: 1024px) {
        header {
            display: flex;
        }
    }
</style>
