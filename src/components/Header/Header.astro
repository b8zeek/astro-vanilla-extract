---
import Logo from '../Logo/Logo.astro'

import { anchor } from './Header.css'
---

<header>
    <Logo component='header' />
    <nav>
        <a class={anchor} href='/'>Home</a>
        <a class={anchor} href='/post'>Posts</a>
    </nav>
</header>

<style>
    header {
        width: 100%;
        display: none;
        justify-content: space-between;
        position: absolute;
        top: 0;
    }

    @media only screen and (min-width: 1024px) {
        header {
            display: flex;
        }
    }

    nav {
        display: flex;
        gap: 1rem;
        padding: 1rem 0;
    }
</style>
